
@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Principal.cshtml";
}

<div class="container">
    <h1>REGISTRO DE TASAS VEHICULARES</h1>
    <div class="row">
        <div class="col-lg-3">
            <h4>Seleccione Aseguradora</h4>
            <select id="aseguradora">
                <!--Carga Dinamica de Aseguradoras-->
            </select>
        </div>

        <div class="col-lg-3">
            <h4>Seleccione Provincia</h4>
            <select id="cobTipo">
                <option value="LIMA">LIMA</option>
            </select>
        </div>

        <div class="col-lg-3">
            <h4>Seleccione Año</h4>
            <select id="anio">
                <option value="2017" selected>2017</option>
                <option value="2016">2016</option>
                <option value="2015">2015</option>
                <option value="2014">2014</option>
                <option value="2013">2013</option>
                <option value="2012">2012</option>
                <option value="2011">2011</option>
                <option value="2010">2010</option>
                <option value="2009">2009</option>
                <option value="2008">2008</option>
                <option value="2007">2007</option>
                <option value="2006">2006</option>
                <option value="2005">2005</option>
                <option value="2004">2004</option>
                <option value="2003">2003</option>
                <option value="2002">2002</option>
                <option value="2001">2001</option>
            </select>
        </div>
        <div class="col-lg-3">
            <h4>Filtrar</h4>
            <input type="button" name="btnFiltrar" id="btnFiltrar" value="Buscar" />
        </div>
    </div>
    <hr />

    <div class="row">
        <!--MODO TABLA-->
        <table class="table table-hover">

            <thead>
                <tr>
                <tr>
                    <th class="center">OP</th>
                    <th class="center">ID</th>
                    <th class="center">Aseguradora</th>
                    <th class="center">Clasificación</th>
                    <th class="center">Provincia</th>
                    <th class="center">Año</th>
                    <th class="center">Tasa</th>

                </tr>
            </thead>

            <tbody id="tasas">
                <tr></tr>
            </tbody>

        </table>
        <!--FIN MODO-->
    </div>
</div>

<script src="~/Javascript/Tasas.js"></script>